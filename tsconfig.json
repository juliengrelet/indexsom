{
    "compilerOptions": {
      "target": "ES2022",                     
      "module": "CommonJS",                   
      "lib": ["ES2022", "dom", "es2015"],                      
      "declaration": true,                    
      "outDir": "./dist",                     
      "strict": true,                         
      "esModuleInterop": true,                
      "moduleResolution": "node",             
      "sourceMap": true,                      
      "resolveJsonModule": true,              
      "skipLibCheck": true,                   
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts"
    ]
  }
  